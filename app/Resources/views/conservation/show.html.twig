{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conservation.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ conservation.libelle }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ conservation.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conservation.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if conservation.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ conservation.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ conservation.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ conservation.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ conservation.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conservation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conservation_edit', { 'id': conservation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
