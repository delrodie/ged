{% extends 'BOLayout.html.twig' %}

{% block title %}
  {{ parent() }}
  modification de Côte definitive
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/form/select2.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/form/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/form/bootstrap-datepicker33.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/photo/bootstrap-fileinput.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/form/select2.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/form/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>Côte definitive</h1>
  <ol class="breadcrumb">
    <li>
      <a href="{{ path('homepage')}}">Accueil</a>
    </li>
    <li>
      <a href="{{ path('definitive_index')}}">Côte definitive</a>
    </li>
    <li class="active">modification</li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
    <span class="sr-only">Toggle navigation</span>
    <span class="toggle-icon">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </span>
  </button>
  <!-- Sidebar Toggle Button -->
  </div>
  <!-- END BREADCRUMBS -->
  <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
  <div class="page-content-container">
    <div class="page-content-row">
    <!-- BEGIN PAGE SIDEBAR -->
    <div class="page-sidebar">
      <nav class="navbar" role="navigation"></nav>
    </div>
    <!-- END PAGE SIDEBAR -->
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="row">
      <div class="col-md-12">
      <!-- BEGIN EXAMPLE TABLE PORTLET-->
      <div class="portlet box blue">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-floppy-o fa-2x"></i> Formulaire de modification
          </div>
          <div class="tools"> </div>
        </div>
        <div class="portlet-body">

          <!--<form class="form-horizontal" method="post" >-->
            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="row">
              <div class="col-md-9 col-md-offset-1">
                <div class="form-group">
                  <label class="control-label col-md-4">Epi
                    <span class="required"> * </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.epi) }}
                    {{ form_errors(edit_form.epi) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Côte provisoire
                    <span class="required"> * </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.provisoire) }}
                    {{ form_errors(edit_form.provisoire) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Côte définitive
                    <span class="required"> * </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.libelle) }}
                    {{ form_errors(edit_form.libelle) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Désignation
                    <span class="required">  </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.description) }}
                    {{ form_errors(edit_form.description) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Rayon
                    <span class="required">  </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.etagere) }}
                    {{ form_errors(edit_form.etagere) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Position
                    <span class="required"> </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.position) }}
                    {{ form_errors(edit_form.position) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Date extrème
                    <span class="required"> </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.extreme) }}
                    {{ form_errors(edit_form.extreme) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Durée de vie
                    <span class="required"> </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.vie) }}
                    {{ form_errors(edit_form.vie) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-4">Sort final
                    <span class="required"> </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(edit_form.sortfinal) }}
                    {{ form_errors(edit_form.sortfinal) }}
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-4"></label>
              <div class="mt-checkbox-list col-md-6">
                <label class="mt-checkbox mt-checkbox-outline">
                  {{ form_widget(edit_form.statut) }} Activez cette côte définitive <span></span>
                </label>
              </div>
            </div>
            <div class="form-actions">
              <div class="row">
                <div class="col-md-offset-5 col-md-4 text-right">
                  <input type="submit" class="btn blue" value="Modifier">
                </div>
              </div>
            </div>
            {{ form_end(edit_form) }}
          </form>
        </div>
      </div>
      <!-- END EXAMPLE TABLE PORTLET-->
      </div>
      </div>
    <!-- END PAGE BASE CONTENT -->
    </div>
  </div>
</div>
<!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{ asset('ressources/vendor/js/form/select2.full.min.js')}}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/jquery.validate.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/additional-methods.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/form-validation.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/select2.full.min.js')}}" type="text/javascript"></script>

  <script type="text/javascript">

    var data = [{% for provisoire in provisoires %} { id: {{ provisoire.id }}, text: '{{ provisoire.libelle }}' }, {% endfor %}];

    $(".select-provisoire").select2({
      data: data,
      placeholder: "Selectionnez la côte provisoire",
      allowClear: true
    })
  </script>
  <script type="text/javascript">

    var data = [{% for sortfinal in sortfinals %} { id: {{ sortfinal.id }}, text: '{{ sortfinal.libelle }}' }, {% endfor %}];

    $(".select-sortfinal").select2({
      data: data,
      placeholder: "Selectionnez le sort final",
      allowClear: true
    })
  </script>
  <script type="text/javascript">

    var data = [{% for epi in epis %} { id: {{ epi.id }}, text: '{{ epi.libelle }}' }, {% endfor %}];

    $(".select-epi").select2({
      data: data,
      placeholder: "Selectionnez l'épi",
      allowClear: true
    })
  </script>

{% endblock %}
