{% extends 'base.html.twig' %}

{% block body %}
    <h1>Serie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ serie.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ serie.libelle }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ serie.slug }}</td>
            </tr>
            <tr>
                <th>Bloc</th>
                <td>{{ serie.bloc }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ serie.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if serie.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ serie.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ serie.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ serie.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ serie.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('serie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('serie_edit', { 'id': serie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
